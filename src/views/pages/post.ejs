<%- include( '../partials/nav', { active: 'blog' } ) %>
<%- include( '../partials/header-blog' ) %>
<main class="flex-fill">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-8 mx-auto">
                <div class="card mb-4">
                    <div class="card-body">
                        <article>
                        <%- include( '../partials/header-post', { post: post } ) %>
                        <%- include( '../posts/' + content ) %>
                        <script src="https://utteranc.es/client.js"
                            repo="paulkazusek/dev-blog-discussions"
                            issue-term="pathname"
                            theme="github-light"
                            crossorigin="anonymous"
                            async>
                        </script>
                        </article>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
<%- include('../partials/footer') %>